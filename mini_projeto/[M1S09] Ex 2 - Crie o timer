<!DOCTYPE html>
<html>
<body>

<h2>Temporizador Simples</h2>

<button onclick="startTimer()">Iniciar Temporizador</button>
<button onclick="stopTimer()">Parar Temporizador</button>

<p id="timer">0</p>

<script>
let count = 0;
let timerId = null;

function startTimer() {
    timerId = setInterval(() => {
        count++;
        document.getElementById('timer').innerHTML = count;
    }, 1000);
}

function stopTimer() {
    clearInterval(timerId);
}
</script>

</body>
</html>
